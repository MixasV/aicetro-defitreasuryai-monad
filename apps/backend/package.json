{
  "name": "defitreasuryai-backend",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "prisma:generate": "node ./scripts/run-prisma.cjs generate",
    "prisma:migrate": "node ./scripts/run-prisma.cjs migrate dev",
    "prisma:migrate:deploy": "node ./scripts/run-prisma.cjs migrate deploy",
    "prisma:seed": "node ./scripts/run-prisma.cjs db seed",
    "demo:setup": "ts-node src/scripts/setupDemo.ts",
    "demo:seed": "ts-node src/scripts/seedDemoScenario.ts",
    "demo:run": "ts-node src/scripts/runDemoScenario.ts",
    "test": "vitest run"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@defitreasuryai/types": "workspace:*",
    "@envio-dev/hypersync-client": "^0.6.6",
    "@prisma/client": "^5.18.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "openrouter-sdk": "^1.0.9",
    "pino": "^9.4.0",
    "pino-http": "^10.5.0",
    "viem": "2.21.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "20.14.12",
    "@types/supertest": "^6.0.3",
    "eslint": "8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-promise": "^6.3.1",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.4",
    "vitest": "^3.2.4"
  }
}
